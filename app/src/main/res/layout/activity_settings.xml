<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Settings">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:background="@drawable/ic_arrow_back_black_24dp"
            android:onClick="toBack"/>

        <TextView
            android:id="@+id/tulisan_pengaturan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/btn_back"
            android:layout_toEndOf="@id/btn_back"
            android:textStyle="bold"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:text="Pengaturan "
            android:textColor="@color/colorBg"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:orientation="vertical"
        android:background="@color/colorBg">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--judul-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tulisan_sensor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sensor Arus"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorTextLight"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginStart="6dp"
                        android:layout_marginBottom="6dp"
                        android:layout_gravity="bottom"
                        android:background="@color/colorAccent"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <RadioGroup
                        android:id="@+id/radio_sensor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radio_sensorSatu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sensor Arus Internal"
                            android:textSize="14sp"
                            android:textColor="@color/colorTextLight"/>

                        <RadioButton
                            android:id="@+id/radio_sensorDua"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sensor Arus External"
                            android:layout_marginLeft="16dp"
                            android:textSize="14sp"
                            android:textColor="@color/colorTextLight"/>
                    </RadioGroup>
                </LinearLayout>

                <!--judul-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Voltage"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorTextLight"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginStart="6dp"
                        android:layout_marginBottom="6dp"
                        android:layout_gravity="bottom"
                        android:background="@color/colorAccent"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp">

                    <!--VR-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Voltage R"
                        android:textSize="14sp"
                        android:textColor="@color/colorTextLight"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="2dp"
                        android:gravity="center_vertical">

                        <SeekBar
                            android:id="@+id/seek_vr"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:scrollbarStyle="outsideOverlay"
                            android:max="100"
                            android:progressTint="@color/colorTextLight"
                            android:thumbTint="@color/colorAccent" />

                        <EditText
                            android:id="@+id/edit_vr"
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:background="@drawable/border"
                            android:textColor="@color/colorTextLight"
                            android:gravity="center"
                            android:text="-50"
                            android:textSize="14sp"
                            android:digits="0123456789-"
                            android:imeOptions="actionDone"
                            android:maxLines="1"/>
                    </LinearLayout>

                    <!--VS-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Voltage S"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/colorTextLight"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="2dp"
                        android:gravity="center_vertical">

                        <SeekBar
                            android:id="@+id/seek_vs"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:scrollbarStyle="outsideOverlay"
                            android:max="100"
                            android:progressTint="@color/colorTextLight"
                            android:thumbTint="@color/colorAccent" />

                        <EditText
                            android:id="@+id/edit_vs"
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:background="@drawable/border"
                            android:textColor="@color/colorTextLight"
                            android:gravity="center"
                            android:text="-50"
                            android:textSize="14sp"
                            android:digits="0123456789-"
                            android:imeOptions="actionDone"
                            android:maxLines="1"/>
                    </LinearLayout>

                    <!--VT-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Voltage T"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/colorTextLight"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="2dp"
                        android:gravity="center_vertical">

                        <SeekBar
                            android:id="@+id/seek_vt"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:scrollbarStyle="outsideOverlay"
                            android:progressTint="@color/colorTextLight"
                            android:max="100"
                            android:thumbTint="@color/colorAccent" />

                        <EditText
                            android:id="@+id/edit_vt"
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:background="@drawable/border"
                            android:textColor="@color/colorTextLight"
                            android:gravity="center"
                            android:text="-50"
                            android:textSize="14sp"
                            android:imeOptions="actionDone"
                            android:digits="0123456789-"
                            android:maxLines="1"/>
                    </LinearLayout>

                </LinearLayout>

                <!--judul-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Database"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorTextLight"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginStart="6dp"
                        android:layout_marginBottom="6dp"
                        android:layout_gravity="bottom"
                        android:background="@color/colorAccent"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp">


                    <Button
                        android:id="@+id/btn_lihatdata"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:padding="12dp"
                        android:text="Lihat data"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:background="@drawable/border_button"
                        android:onClick="lihatData"/>

                </LinearLayout>

                <Button
                    android:id="@+id/btn_simpan"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:padding="8dp"
                    android:layout_marginTop="18dp"
                    android:layout_gravity="center_horizontal"
                    android:text="simpan"
                    android:textSize="12sp"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:background="@drawable/border"
                    android:onClick="saveData"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>